<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE paneles[
<!ELEMENT paneles (evento+)>
<!ELEMENT evento (via, pk, retencion?, sentido, carril?)>
<!ATTLIST evento tipo (Accidente | Retencion) #REQUIRED>
<!ELEMENT Accidente (#PCDATA)>
<!ELEMENT Retencion (#PCDATA)>
<!ATTLIST evento fecha CDATA #REQUIRED>
<!ELEMENT via (nombre?, ref?, origen?, destino?, doble?, carriles?)>
<!ELEMENT nombre (#PCDATA)>
<!ELEMENT ref (#PCDATA)>
<!ELEMENT origen (#PCDATA)>
<!ELEMENT destino (#PCDATA)>
<!ELEMENT doble EMPTY>
<!ELEMENT carriles (#PCDATA)>

<!ELEMENT pk (#PCDATA)>
<!ELEMENT sentido (#PCDATA)>
<!ELEMENT retencion EMPTY>
<!ATTLIST retencion long CDATA #IMPLIED>
<!ELEMENT carril EMPTY>
<!ATTLIST carril valor CDATA #REQUIRED>
]>

